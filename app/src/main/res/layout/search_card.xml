<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/search_propic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/businessman"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Santhiya M"
                android:textColor="@color/text_blue"
                android:fontFamily="@font/nunito"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/search_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coimbatore"
                android:layout_marginTop="7dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/location_image"
                android:textColor="@color/grey"
                android:fontFamily="@font/nunito"
                android:textSize="15sp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/search_rating"
            android:layout_marginEnd="25dp"
            android:text="0"
            android:drawableTint="@color/yellow"
            android:drawableStart="@drawable/ic_round_star_24"
            android:fontFamily="@font/nunito"
            android:textSize="18dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:background="@color/med_grey"/>


</LinearLayout>
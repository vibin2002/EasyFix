<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="7dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/req_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/nunito"
                android:text="Sample Name"
                android:textColor="@color/text_blue"
                android:textSize="18dp" />
            <TextView
            android:layout_width="wrap_content"
                android:layout_marginEnd="25dp"
                android:id="@+id/dateandtime"
                android:textAlignment="textEnd"
                android:textColor="@color/grey"
            android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="date"
                android:textSize="15dp"
                android:fontFamily="@font/nunito"/>
        </LinearLayout>

        <TextView
            android:id="@+id/req_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/nunito"
            android:text="Make Chapathi for me for 24 hours/day Make Chapathi for me for 24 hours/day Make Chapathi for me for 24 hours/day v"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/showloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginTop="5dp"
                android:text="View Location"
                android:textColor="@color/text_blue" />

            <TextView
                android:id="@+id/calluser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="15dp"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginTop="5dp"
                android:text="Call"
                android:textColor="@color/text_blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_decline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.5"
                android:background="@drawable/declinebg"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center"
                android:padding="8dp"
                android:text="Decline" />

            <TextView
                android:id="@+id/btn_accept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="0.5"
                android:background="@drawable/greenbg"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center"
                android:padding="8dp"
                android:text="Accept" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>